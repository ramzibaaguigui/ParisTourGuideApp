<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_background</item>
    </style>

    <style name="ItemAttributeViewGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/big_margin_padding</item>
        <item name="android:padding">@dimen/small_margin_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="ItemAttributeTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/big_margin_padding</item>
        <item name="android:layout_marginRight">@dimen/big_margin_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_25_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/item_attribute_text_view_background</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="ItemAttributeImageViewStyle">
        <item name="android:layout_width">@dimen/width_height_40_dp</item>
        <item name="android:layout_height">@dimen/width_height_40_dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ItemMainImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemNameTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_25_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemLocationImageViewStyle">
        <item name="android:layout_width">@dimen/width_height_40_dp</item>
        <item name="android:layout_height">@dimen/width_height_40_dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_location</item>
    </style>

    <style name="ItemLocationTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
    </style>

    <style name="VerticalDividerViewStyle">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:layout_margin">@dimen/small_margin_padding</item>
    </style>

    <style name="ItemTypeTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
    </style>

    <style name="ItemTypeImageViewStyle">
        <item name="android:layout_width">@dimen/width_height_30_dp</item>
        <item name="android:layout_height">@dimen/width_height_30_dp</item>
        <item name="android:layout_margin">@dimen/big_margin_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>
